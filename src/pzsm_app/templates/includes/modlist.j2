{% for mod in mods %}
    <div class="col">
        <div class="card shadow mb-4 {% if mod.modId == None %}highlight{% endif %} ">
        <a href="https://steamcommunity.com/sharedfiles/filedetails/?id={{ mod.workshop_id }}" target="_blank" rel="noopener noreferrer">

            <img class="card-img-top" src="{{ mod.thumbnail }}" alt="mod-thumbnail">
            </a>
            <div class="card-body">
                <h5 class="card-title text-nowrap text-center">{{ mod.name }}</h5>
                <div class="card-text">
                    <div class="row">
                        <div class="col">
                            <b class="text-nowrap">Workshop ID:</b>
                        </div>
                        <div class="col">
                            <p class="text-nowrap">{{ mod.workshop_id }}</p>
                        </div>
                    </div>
                    <div class="row">
                        <table class="table">
                            <tbody>
                                {% for mod_id in mod.mod_ids %}
                                    <tr>
                                        <th scope="row">Mod ID:</th>
                                        <td>{{ mod_id.id }}</td>
                                        <td>
                                            <div class="form-switch">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       onChange="apply_checkbox(event, '{{ mod.workshop_id }}','{{ mod_id.id }}')"
                                                       {% if mod_id.enabled %}checked{% endif %}>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
